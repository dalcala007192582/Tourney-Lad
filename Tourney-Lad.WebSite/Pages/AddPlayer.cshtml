@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Models.Players;
@using System.Data.SqlClient
@using Microsoft.AspNetCore.Identity;
@using Tourney_Lad.WebSite.Areas.Identity.Data;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div class="text-center">
    <h1 class="display-4">Add a new Player</h1>
</div>

<form asp-controller="AddPlayerModel" asp-action="PlayerSubmit" method="post">
    <div class="form-floating mb-3">
        <input asp-for="PlayerName" type="text" class="form-control" name="PlayerName" placeholder="Username">
        <label for="username">Username</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="TeamName" type="text" class="form-control" name="TeamName" placeholder="Team Name">
        <label for="teamname">Team Name</label>
    </div>

    <div class= "form-floating mb-3">
        <input asp-for="Wins" type="number" min="0" oninput="this.value = Math.abs(this.value)" class="form-control" name="Wins" placeholder="0">
        <label for="wins">Number of Wins</label>
    </div>

    <div class= "form-floating mb-3">
        <input asp-for="Losses" type="number" min="0" oninput="this.value = Math.abs(this.value)" class="form-control" name="Losses" placeholder="0">
        <label for="losses">Number of Losses</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Avatar" type="text" class="form-control" name="Avatar" placeholder="Avatar">
        <label for="avatar">Avatar Link</label>
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" asp-page-handler="Submit"/>
</form>